{
    "manifest_version": 2,
    "name": "TrustBLK",
    "version": "0.1",
    "description": "Trustworthy and Fair Ad-Blocker",
    "background": {
        "scripts": [
            "./filters/blockHosts.js", 
            "./filters/blockCSS.js", 
            "./filters/blockAA.js",
            "./filters/blockGeneral.js", 
            "./scripts/background.js", 
            "./scripts/blocker.js"
        ]
    },
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js" : ["index.js"],
            "run_at": "document_start"
        }
    ],
    "browser_action":{
        "default_icon": "./assets/logo.png",
        "default_popup": "./html/popup.html"
    },
    "options_page": "./html/options.html",
    "permissions": ["activeTab", "tabs", "webRequest", "webRequestBlocking", "<all_urls>"]
}